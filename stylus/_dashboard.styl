.dashboard
	margin-top: $sizes.header-height
	section.events
		display block
		padding 40px 0px
		width: $sizes.event-width
		.label
			display inline-block
			padding 15px 25px
			text-transform uppercase
			background white
			width auto
			overflow hidden
			font-size 22px
		.event-background
			height: $sizes.event-height
			width 100%
			background-color: $colors.slate
			background-size cover
			background-position center
			background-position-y 60% // Kind of a magic number based on most photos
			padding-left 30px
			display table
			cursor pointer
			position relative
			.background-darken
				position absolute
				width 100%
				height 100%
				top 0
				left 0
				background: #222
				opacity 0
				transition opacity 0.4s
				z-index 1

			&:hover
				.background-darken
					opacity 0.7
				
			.event-labels
				position relative
				display table-cell
				vertical-align middle
				z-index 10
				.event-name
					font-size 50px
					color white
					margin-bottom 10px
				.event-date
					font-size 22px
					text-transform uppercase
					color: $colors.light-gray