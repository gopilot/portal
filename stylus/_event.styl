.container > section.team
	.team-size
		width 100%
		text-align center
		font-size 30px
		margin-top 25px
		margin-bottom 15px
	.team-container
		display block
		margin auto
		overflow hidden
		text-align center
	.teammate-card
		position relative
		width 250px
		height 280px
		vertical-align top
		display inline-block
		background white
		margin 15px
		&:hover .icon
			opacity 1
		img.profile
			width 150px
			height 150px
			margin 30px 40px
			margin-bottom 15px
			border-radius 75px
		.name
			width 100%
			text-align center
			font-size 25px
			transition color 0.3s
			margin-bottom 15px
		.email
			width 100%
			text-align center
			font-size 15px
			color: lighten($colors.slate, 30%)
		.icon
			position absolute
			top 0
			right 0
			font-size 50px
			margin-top -5px
			margin-right 10px
			transition all 0.3s
			opacity 0
			cursor pointer
			&:hover
				color: $colors.blue
		&.empty
			background none
			border: 4px dashed lighten($colors.slate, 50%)
			transition border 0.5s
			cursor default
			img.profile, .name, .icon
				display none
			font-size 200px
			&.icon
				cursor pointer
				&:before
					content '+'
				&:hover
					border-color: $colors.blue
					&:before
						color: $colors.blue
			&:before
				width 100%
				height 100%
				color: lighten($colors.slate, 50%)
				font-size 160px
				font-weight 200
				transition color 0.5s
				cursor pointer
				vertical-align top
				position relative
				top 28px		
	.add-teammate
		form
			width auto
			display block
			margin auto
			text-align center
			position relative
			.input-group
				display inline-block
			button
				display inline-block
				margin-left 25px
				height 60px
				width 200px
				position relative
				margin-top 15px
		.error-text
			width 100%
			text-align center
			margin-bottom none

.container > section.attendees
	.table-container
		display block
		width 95%
		height 100%
		background white
		padding 0px 40px
		margin 25px auto
	.toggle
		margin-top 25px
	.input-group.filter
		float right
	table
		display block
		width 100%
		min-width 400px
		max-height 700px
		margin 25px 0px
		overflow-y scroll
		overflow-x scroll
		position relative
		th, td
			padding 10px 10px
			white-space nowrap
		th
			background: $colors.blue
			color white
			padding 18px 10px
			cursor pointer
			user-select none
			i.icon
				display none
				font-size 25px
				margin-left 5px
				vertical-align middle
			&.selected
				background: darken($colors.blue, 40%)
				i.icon
					display inline-block
		tbody
			tr
				transition background 0.2s
				cursor pointer
				td
					font-weight 200
			tr:nth-child(even)
				background: $colors.gray
			tr:nth-child(odd)
				background: lighten($colors.gray, 40%)
			tr:hover
				background: lighten($colors.blue, 60%)
	.edit-attendee
		h3
			font-size 40px
			margin-bottom 10px
		.form-container
			background none
			width auto
		.input-group
			display block		

