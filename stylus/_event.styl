.event-cover
	display block
	position relative
	background-size cover
	background-position-y 60%
	height: $sizes.event-cover-height
	width: 100%
	.tab-navigation
		position absolute
		height: $sizes.event-nav-height
		width auto
		bottom 0
		left 0
		background: $colors.slate
		ul
			list-style none
			li
				display inline-block
				background: $colors.slate
				position relative
				box-sizing:border-box;
				-moz-box-sizing:border-box;
				-webkit-box-sizing:border-box;
				vertical-align top
				height: $sizes.event-nav-height
				text-transform uppercase
				font-size 14px
				font-weight 200
				line-height: $sizes.event-nav-height
				color white
				padding 0px 25px
				border-top: 3px solid $colors.slate
				a
					display block
					width auto
					height 100%
					text-align center
					cursor pointer
					color white
				&:hover, &.selected
					background: linear-gradient(to top, #E2E5E6, #FAFCFD)
					border-color: $colors.blue
					a
						color: $colors.blue
				&.selected:after
					top 100%
					left 50%
					border solid transparent
					content " "
					height 0
					width 0
					position absolute
					pointer-events none
					border-color rgba(226, 229, 230, 0)
					border-top-color #E2E5E6
					border-width 15px
					margin-left -15px
	
section.announcements
	display inline-block
	height auto
	width: $sizes.inner-width
	margin-top 25px
	background white
	.announcement-container
		padding-bottom 10px
		.title
			display inline-block
			font-size 50px
			color: $colors.blue
			margin 25px
			margin-bottom 0
		.time
			display inline-block
			font-size 20px
			text-transfrom uppercase
			color: lighten($colors.slate, 50%)
		.text
			margin 25px
			font-size 20px
	.post-divider
		width 135px
		border-bottom: 2px solid $colors.gray
	.repeat-announcement:last-of-type
		.post-divider
			display none

section.twitter
	display inline-block
	vertical-align top
	margin-left 40px
	margin-top 25px
	width 360px
	.hashtag
		display inline-block
		width 50%
		font-size 18px
		text-transform uppercase
		padding 15px 0px
		text-align center
		cursor pointer
		background: white
		color: $colors.slate
	.twitter-content
		display block
		width 100%
		height 300px
		background white
		overflow-y scroll
		padding 0px 12px 
		.tweet-container
			padding 15px
			font-size 15px
			border-top: 1px solid $colors.gray
			.tweet-link
				display block
				text-decoration none
				color: $colors.slate
			&:first-of-type
				border-top none
			.handle
				display inline
				font-weight 400
				margin-right 6px
			.tweet
				display inline
			.time
				margin-left 6px
				display inline
				font-size 12px
				text-transfrom uppercase
				color: lighten($colors.slate, 50%)
				
section.mentors
	display block
	min-height 400px
	padding 25px
	width: $sizes.inner-width
	margin-top 25px
	background white
	p 
		font-size 20px
	.input-group
		margin 25px 0px
		max-width 70%
	button
		width 400px
		height 70px
	.error-text
		margin-top 25px

section.team
	.team-size
		width 100%
		text-align center
		font-size 30px
		margin 25px 0px
	.team-container
		display block
		margin auto
		overflow hidden
		text-align center
	.teammate-card
		width 250px
		height 280px
		vertical-align top
		display inline-block
		background white
		margin 15px
		cursor pointer
		img.profile
			width 150px
			height 150px
			margin 30px 50px
			border-radius 75px
		.name
			width 100%
			text-align center
			font-size 25px
			transition color 0.3s
		&.empty
			background none
			border: 4px dashed lighten($colors.slate, 50%)
			transition border 0.5s
			cursor pointer
			&:before
				content '+'
				width 100%
				height 100%
				color: lighten($colors.slate, 50%)
				font-size 160px
				font-weight 200
				line-height 210px
				transition color 0.5s
				cursor pointer
			&:hover
				border-color: $colors.blue
				&:before
					color: $colors.blue
		&:hover .name
			color: $colors.blue	
			
.add-teammate
	form
		width auto
		display block
		margin auto
		text-align center
		position relative
		.input-group
			display inline-block
		button
			display inline-block
			margin-left 25px
			height 60px
			width 200px
			position relative
			margin-top 18px
	.close-button
		display block
		position absolute
		width 25px
		height 100px
		background white
		right 25px
		top 5px
		font-size 50px
		transition color 0.3s
		cursor pointer
		&:hover
			color: $colors.blue
	.error-text
		width 100%
		text-align center
		margin-bottom none
	
