.event-cover
	display block
	position relative
	background-size cover
	background-position-y 60%
	height: $sizes.event-cover-height
	width: 100%
	.tab-navigation
		position absolute
		height: $sizes.event-nav-height
		width auto
		bottom 0
		left 0
		background: $colors.slate
		ul
			list-style none
			li
				display inline-block
				background: $colors.slate
				position relative
				box-sizing:border-box;
				-moz-box-sizing:border-box;
				-webkit-box-sizing:border-box;
				vertical-align top
				height: $sizes.event-nav-height
				text-transform uppercase
				font-size 14px
				font-weight 200
				line-height: $sizes.event-nav-height
				color white
				padding 0px 25px
				border-top: 3px solid $colors.slate
				a
					display block
					width auto
					height 100%
					text-align center
					cursor pointer
					color white
				&:hover, &.selected
					background: linear-gradient(to top, #E2E5E6, #FAFCFD)
					border-color: $colors.blue
					a
						color: $colors.blue
				&.selected:after
					top 100%
					left 50%
					border solid transparent
					content " "
					height 0
					width 0
					position absolute
					pointer-events none
					border-color rgba(226, 229, 230, 0)
					border-top-color #E2E5E6
					border-width 15px
					margin-left -15px
	
section.announcements
	display inline-block
	height auto
	width: $sizes.announcements-width
	margin-top 25px
	background white
	padding 25px 0px
	.title
		display inline-block
		font-size 50px
		color: $colors.blue
		margin 25px
		margin-bottom 0
	.time
		display inline-block
		font-size 20px
		text-transfrom uppercase
		color: lighten($colors.slate, 50%)
	.text
		margin 25px
		font-size 20px
	.post-divider
		width 135px
		border-bottom: 2px solid $colors.gray

section.twitter
	display inline-block
	vertical-align top
	margin-left 45px
	margin-top 25px
	background white
	width 360px
	.tabs
		ul
			list-style none
			width 100%
			li
				display inline-block
				width 50%
				font-size 18px
				text-transform uppercase
				padding 15px 0px
				text-align center
				cursor pointer
				background: white
				color: $colors.slate
				&:last-of-type
					border-left: 3px solid $colors.gray
				&:hover, &.selected
					color: $colors.blue
	.twitter-content
		display block
		width 100%
		height 300px
				
		
