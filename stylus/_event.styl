.event-cover
	display block
	position relative
	background-size cover
	background-position-y 60%
	height: $sizes.event-cover-height
	width: 100%
	.tab-navigation
		position absolute
		height: $sizes.event-nav-height
		width auto
		bottom 0
		left 0
		background: $colors.slate
		&.right
			left auto
			right 0
		ul
			list-style none
			li
				display inline-block
				background: $colors.slate
				position relative
				box-sizing:border-box;
				-moz-box-sizing:border-box;
				-webkit-box-sizing:border-box;
				vertical-align top
				height: $sizes.event-nav-height
				text-transform uppercase
				font-size 14px
				font-weight 200
				line-height: $sizes.event-nav-height
				color white
				padding 0px 25px
				border-top: 3px solid $colors.slate
				a
					display block
					width auto
					height 100%
					text-align center
					cursor pointer
					color white
				&:hover, &.selected
					background: linear-gradient(to top, #E2E5E6, #FAFCFD)
					border-color: $colors.blue
					a
						color: $colors.blue
				&.selected:after
					top 100%
					left 50%
					border solid transparent
					content " "
					height 0
					width 0
					position absolute
					pointer-events none
					border-color rgba(226, 229, 230, 0)
					border-top-color #E2E5E6
					border-width 15px
					margin-left -15px
.tab-section
	display none
	&.shown
		display block	

.container > section.announcements
	padding-top 25px
	.button-container
		overflow hidden
		width: $sizes.inner-width
		button
			width 220px
			height 50px
			float right
			display block
			padding-top 10px
			margin-bottom 10px
	.announcement-block
		display inline-block
		height auto
		width: $sizes.inner-width
		background white
		.announcement-container
			padding-bottom 10px
			position relative
			.title
				display inline-block
				font-size 50px
				color: $colors.blue
				margin 25px
				margin-bottom 0
			.time
				display inline-block
				font-size 20px
				text-transfrom uppercase
				color: lighten($colors.slate, 50%)
			.text
				margin 25px
				font-size 20px
				line-height 25px
			.image
				margin 25px
				margin-top 0
				max-width: 600px
				max-height: 600px
			.icon
				font-size 30px
				position absolute
				top 40px
				color: lighten($colors.slate, 50%)
				transition all 0.3s
				opacity 0
				cursor pointer
				&.edit
					right 70px
					&:hover
						color: $colors.blue
				&.delete
					right 40px
					&:hover
						color: $colors.red
			&:hover .icon
				opacity 1
				
		.post-divider
			width 135px
			border-bottom: 2px solid $colors.gray
		.repeat-announcement:last-of-type
			.post-divider
				display none

	.confirm-delete
		width 600px
		text-align center
		.confirm
			width 100%
			text-align center
			font-size 20px
			margin 15px
			margin-top 25px
		button:hover
			background: $colors.red
			border-color: $colors.red

	.edit-post
		width 600px
		form
			width 500px
			display block
			margin auto
			position relative
			.input-group
				max-width 500px
				margin-bottom 10px
			button
				height 60px
				width 300px
				position relative

	.twitter
		vertical-align top
		display inline-block
		margin-left 40px
		width 360px
		.hashtag
			display inline-block
			width 50%
			font-size 18px
			text-transform uppercase
			padding 15px 0px
			text-align center
			cursor pointer
			background: white
			color: $colors.slate
		.twitter-content
			display block
			width 100%
			height 300px
			background white
			overflow-y scroll
			padding 0px 12px 
			.tweet-container
				padding 15px
				font-size 15px
				border-top: 1px solid $colors.gray
				.tweet-link
					display block
					text-decoration none
					color: $colors.slate
				&:first-of-type
					border-top none
				.handle
					display inline
					font-weight 400
					margin-right 6px
				.tweet
					display inline
				.time
					margin-left 6px
					display inline
					font-size 12px
					text-transfrom uppercase
					color: lighten($colors.slate, 50%)
				
