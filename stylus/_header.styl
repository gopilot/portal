.header
    position absolute
    top 0
    left 0
    width 100%
    height: $sizes.header-height
    font-weight 200
    z-index 100
    .h1
        display inline-block
        background-color: $colors.slate
        background-image url('/img/logo.svg')
        background-size contain
        background-repeat no-repeat
        background-position bottom center
        width 135px
        height 100%
        position relative
        top 0
        text-indent 100%
        overflow hidden
        vertical-align top
        cursor pointer
        float left
        transition background-color 0.5s
        &:hover
            background-color: $colors.blue

    .page-title-container
        display inline-block
        // padding-left 135px
        background-color white
        height 100%
        float left
        .page-title
            position relative
            display inline-block
            height 100%
            vertical-align top
            color: $colors.slate
            text-align center
            line-height: $sizes.header-height
            font-size 30px
            padding 0px 50px
            
    .header-middle
        display block
        height 100%
        vertical-align top
        background-color white
        width auto
        float none
        .border-container
            padding-top 40px
            padding-left 40px
            height 100%
            width auto
            overflow hidden
            border-left: 2px solid $colors.light-gray
            .next-event
                cursor pointer
                .upcoming
                    text-transform uppercase
                    font-size 15px
                    line-height 15px
                    margin-bottom 4px
                .eventname
                    font-size 22px
                    line-height 22px
                    height 25px
                &:hover
                    color: $colors.blue
    
    .right
        display inline-block
        position relative
        float right
        height 100%
        padding 40px
        text-align right
        background-color white
        .profile
            height 44px
            width 44px
            background-size cover
            background-position center
            border-radius 22px
            float right
            display inline-block
            margin-left 10px
            position relative
            top -4px
        .text-container
            display inline-block
            .greet
                padding-bottom 4px
                .name
                    font-weight 400
            .links a
                color: $colors.slate
                &:hover
                    color: $colors.blue
