.auth-screen
    position fixed
    background-image: $colors.slate // JS makes this a background background-image
    background-size cover
    background-position center    
    top 0
    left 0
    right 0
    bottom 0
form.login
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -70%)
    width 450px
    img.logo
        display block
        width 160px
        height auto
        margin auto
        margin-bottom 30px
    input
        border none
        margin none
        margin-bottom 3px
        width 100%
        height 65px
        font-size 30px
        padding 25px
        font-family 'DIN'
        font-weight 200
        &:first-of-type
            border-top-left-radius 5px
            border-top-right-radius 5px
        &:last-of-type
            border-bottom-left-radius 5px
            border-bottom-right-radius 5px
    button
        border none
        outline none
        display block
        width 100%
        height 65px
        margin-top 15px
        padding 20px 25px
        font-size 30px
        line-height 15px
        font-family 'DIN'
        font-weight 400
        color white
        background-color: $colors.blue
        border: 2px solid $colors.blue
        border-radius 5px
        cursor pointer
        transition all 0.3s ease-in-out
        &:hover
            color: $colors.blue
            background: rgba(54,132,184, 0.0) // Blue color, 0 opacity
        &:active
            color: darken($colors.blue, 50%)
            border-color: darken($colors.blue, 50%)

.registration-form
    display block
    max-width 600px
    padding 25px 75px
    margin 50px auto
    position relative 
    background-color white
    img.logo
        display inline-block
        height 100px
        margin-bottom 25px
    h1
        display inline-block
        vertical-align top
        line-height 120px
        margin-left 20px
        font-size 2.5em
        
.welcome
    max-width 700px
    h3
        display block
        font-size 40px
        font-weight 400
        text-align center
        margin-bottom 20px
    p
        margin 20px
    button
        display block
        margin auto

.error-container
    position fixed
    width 100%
    height 100%
    top 0
    left 0
    right 0
    bottom 0
    background: $colors.slate
    color white
    z-index 100
    display none
    &.shown
        display block
    .centered
        position absolute;
        width 500px 
        max-width 500px
        height 200px 
        z-index 15 
        top 50% 
        left 50% 
        margin -100px 0 0 -200px 
        .error-title
            font-weight 200
            font-size 2rem
        .email-link
            text-decoration none
            color: $colors.blue
            padding-bottom 2px
            &:hover
                border-bottom: 1px solid $colors.blue

