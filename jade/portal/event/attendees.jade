section.tab-section.attendees(ng-if="user.type == 'organizer'" ng-class="{shown: (tab == 'attendees')}")
	.table-container
		.toggle
			.option(ng-click="viewTable = 'students'" ng-class="{selected: (viewTable == 'students')}") Students
			.option(ng-click="viewTable = 'mentors'" ng-class="{selected: (viewTable == 'mentors')}") Mentors
		.input-group.filter
			input(type="text" id="filter" ng-model='query' placeholder="")
			label(for="filter")
				span Filter
		table.students(ng-show="viewTable == 'students'")
			thead
				tr
					th(ng-class="{selected: (sortCol == 'name')}" ng-click="changeSort('name')") Name
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'email')}" ng-click="changeSort('email')") Email
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'grade')}" ng-click="changeSort('grade')") Grade
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'school')}" ng-click="changeSort('school')") School
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'gender')}" ng-click="changeSort('gender')") Gender
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'experience_years')}" ng-click="changeSort('experience_years')") Experience
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'birth_date')}" ng-click="changeSort('birth_date')") Birth Date
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'phone')}" ng-click="changeSort('phone')") Phone
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'shirt_type')}" ng-click="changeSort('shirt_type')") Shirt Type
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'shirt_size')}" ng-click="changeSort('shirt_size')") Shirt Size
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'emergency_name')}" ng-click="changeSort('emergency_name')") Emergency Name
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'emergency_email')}" ng-click="changeSort('emergency_email')") Emergency Email
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'emergency_phone')}" ng-click="changeSort('emergency_phone')") Emergency Phone
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'dietary')}" ng-click="changeSort('dietary')") Dietary Restrictions
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
					th(ng-class="{selected: (sortCol == 'notes')}" ng-click="changeSort('notes')") Notes
						i.icon(ng-class="{'pe-7s-angle-up': !reverse, 'pe-7s-angle-down': reverse}")
			tbody
				tr(ng-repeat="student in attendees.students | orderBy:sortCol:reverse | filter:query" ng-click="openAttendee(student)")
					td {{student.name}}
					td {{student.email}}
					td {{student.grade}}
					td {{student.school}}
					td {{student.gender}}
					td {{student.experience_years}}
					td {{student.birth_date}}
					td {{student.phone}}
					td {{student.shirt_type}}
					td {{student.shirt_size}}
					td {{student.emergency_name}}
					td {{student.emergency_email}}
					td {{student.emergency_phone}}
					td {{student.dietary}}
					td {{student.notes[event.id]}}

