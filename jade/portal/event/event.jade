.event-cover(ng-style="{'background-image':'url('+event.image+')'}")
	.tab-navigation: ul
		li(ng-class="{selected: (tab == 'announcements')}"): a(ng-click="tab = 'announcements'") Announcements
		li(ng-class="{selected: (tab == 'schedule')}"): a(ng-click="tab = 'schedule'") Schedule
		li(ng-class="{selected: (tab == 'mentors')}"): a(ng-click="tab = 'mentors'") Request a Mentor
		li(ng-class="{selected: (tab == 'team')}"): a(ng-click="tab = 'team'") Your Team
		li(ng-class="{selected: (tab == 'projects')}"): a(ng-click="tab = 'projects'") Projects

section.event-tab
	.container
		include announcements.jade
		include schedule.jade
		include mentors.jade
		include team.jade
		include projects.jade